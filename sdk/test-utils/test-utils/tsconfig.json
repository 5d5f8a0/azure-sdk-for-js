{
  "extends": "../../../tsconfig.package",
  "compilerOptions": {
    "paths": {
      "@azure/test-utils": ["./src/index.ts"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.cts",
    "./src/**/*.ms",
    "./test/**/*.ts",
    "./test/**/*.cts",
    "./test/**/*.mts",
    "vitest-matchers.d.ts"
  ]
}
